{
  "openapi": "3.0.0",
  "info": {
    "title": "API App",
    "description": "API с модулем Users, который поддерживает CRUD и позволяет получить следующую информацию:\n- Используя данные из таблицы User, подсчитывать количество пользователей, зарегистрированных за последние 7 дней;\n- Получить топ 5 пользователей с самыми длинными именами;\n- Получить процент пользователей, которые имеют адрес электронной почты, зарегистрированный в определенном домене (например, \"example.com\").",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "{protocol}://127.0.0.1:{port}",
      "variables": {
        "protocol": {
          "enum": [
            "http",
            "https"
          ],
          "default": "http"
        },
        "port": {
          "enum": [
            "5000"
          ],
          "default": "5000"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "users",
      "description": "Операции с пользователями"
    }
  ],
  "paths": {
    "/api/users/": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Получение всех пользователей",
        "responses": {
          "200": {
            "description": "Список пользователей",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/User"
                      }
                    ]
                  }
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Получение пользователей с пагинацией",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Номер страницы"
          },
          {
            "in": "query",
            "name": "per_page",
            "schema": {
              "type": "integer"
            },
            "required": true,
            "description": "Количество элементов для отображения на странице"
          }
        ],
        "responses": {
          "200": {
            "description": "Список пользователей",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "$ref": "#/components/schemas/User"
                      }
                    ]
                  }
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      },
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Создание пользователя",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь создан",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Получение польльзователя по id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "id пользователя"
          }
        ],
        "responses": {
          "200": {
            "description": "Пользователь получен",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      },
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Обновление пользователя по id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "id пользователя"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Пользователь получен",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      },
      "delete": {
        "tags": [
          "users"
        ],
        "summary": "Удаление пользователя по id",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer",
              "minimum": 1
            },
            "description": "id пользователя"
          }
        ],
        "responses": {
          "200": {
            "description": "Пользователь удален",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "deleted": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      }
    },
    "/api/users/info": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Получение информации о пользователях",
        "description": "- Пользователи, которые зарегистрировались за последние 7 дней\n- Топ 5 пользователей, которые имеют самые длинные имена (по убыванию)\n- Процент пользователей, которые имеют адрес электронной почты, зарегистрированный в определенном домене (например, \"example.com\").",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "domain": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Информация получена",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "countUsersForWeek": {
                      "type": "integer"
                    },
                    "percentOfDomain": {
                      "type": "object",
                      "properties": {
                        "domain": {
                          "type": "string"
                        },
                        "percent": {
                          "type": "number"
                        }
                      }
                    },
                    "topUsersWithLongestUsernames": {
                      "type": "array",
                      "items": {
                        "allOf": [
                          {
                            "$ref": "#/components/schemas/User"
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Ошибка на стороне сервера"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 10
          },
          "username": {
            "type": "string",
            "example": "theUser"
          },
          "email": {
            "type": "string",
            "example": "john@email.com"
          },
          "registration_date": {
            "type": "string",
            "format": "date-time",
            "example": "Fri, 28 Apr 2023 16:28:26 GMT"
          }
        },
        "xml": {
          "name": "user"
        }
      }
    }
  }
}